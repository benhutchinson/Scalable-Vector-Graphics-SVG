<svg width="200" height="200" xmlns="http://www.w3.org/2000/svg" version="1.1">
  <defs>
    <style type="text/css"><![CDATA[
       #MyRect {
         stroke: black;
         stroke-dasharray: 5,10;
         stroke-width: 10;
         fill: red;
      }
       #MyRect:hover {
        stroke: black;
        fill: blue;
      }
    ]]></style>
  </defs>
  <rect x="10" height="180" y="10" width="180" id="MyRect"/>
  <text x="100" y="55" font-size="15" text-anchor="middle" fill="yellow">STYLED VIA DEF</text>
